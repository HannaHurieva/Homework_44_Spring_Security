<!DOCTYPE HTML>
<html>

<body>
    <div>
      <form action="/logout" method="post">
<input type="hidden" name="_csrf" value="{{_csrf.token}}" />
         <input type="submit" value="Sign Out"/>
      </form>
    </div>
    <div>
      <form method="post">
        <input type="text" name="title" placeholder="Input the title of the song">
        <input type="text" name="singer" placeholder="Singer">
<input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <button type="submit">Add the song</button>
       </form>
    </div>

    <div>Filter</div>
    <form method="post" action="filter">
        <input type="text" name="filter">
<input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <button type="submit">Find by Singer</button>
    </form>

    <div>List of songs</div>
        {{#songs}}
        <div>
           <b>{{id}}</b>
           <span>{{title}}</span>
           <i>{{singer}}</i>
        </div>
        {{/songs}}
</body>

</html>